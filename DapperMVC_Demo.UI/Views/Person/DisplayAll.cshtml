@model IEnumerable<Person>

<h3> People List </h3>

<div class="my-2">
    <a href="/Person/Add" class="btn btn-info my-2"> Add More </a>
    <table class="table table-striped">
        <thread>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th></th>
            </tr>
            
        </thread>
        <tbody>
            @foreach(var person in Model)
            {
                <tr>
                    <td>@person.Name</td>

                    <td>@person.Email</td>

                    <td>@person.Address</td>

                    <td>
                        <a href="/Person/Edit?id=@person.Id" class="btn btn-secondary">Edit</a>
                        <a href="/Person/Delete?id=@person.Id" onclick="return window.confirm('Are you sure to Delete the record?')" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>